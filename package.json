{
  "name": "near-chatme",
  "version": "1.0.0",
  "license": "(MIT AND Apache-2.0)",
  "scripts": {
    "start": "cd frontend && npm run start",
    "deploy": "cd contract && ./deploy.sh",
    "data:seed": "cd contract && ./data_seed.sh",
    "build": "npm run build:contract && npm run build:web",
    "build:web": "cd frontend && npm run build",
    "build:contract": "cd contract && ./build.sh",
    "update:contract": "npm run build:contract && npm run deploy",
    "dev:build:web": "cd frontend && npm run dev:build",
    "dev:deploy": "CONTRACT_ID=near-message.testnet && near deploy --wasmFile contract/target/wasm32-unknown-unknown/release/near_chatme.wasm --accountId $CONTRACT_ID",
    "test": "npm run test:unit",
    "test:unit": "cd contract && cargo test",
    "postinstall": "cd frontend && npm install && cd .. && echo rs tests && echo rs contract",
    "graph:build": "cd thegraph && graph codegen && graph build",
    "graph:deploy": "cd thegraph && npm run deploy"
  },
  "devDependencies": {
    "near-cli": "^3.0.0"
  }
}
